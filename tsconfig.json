{
  "compileOnSave": true,
  "compilerOptions": {
    "rootDir": "src",
    "target": "es6",
    "strictNullChecks": true,
    "sourceMap": true,
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "lib": ["dom", "es6", "es2017"],
    "outDir": "dist/sources"
  }
}
